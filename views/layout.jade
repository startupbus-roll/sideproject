  head

    title Roll - Flying standby made simple

    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE-edge,chrome=1")
    meta(name="description", content="")
    meta(name="viewport", content="width=device-width")

    link(rel="shortcut icon" href="/assets/favicon.ico")

    block styles
      link(rel='stylesheet', href='/assets/stylesheets/screen.css')

  body
    
    .ro-app-wrap
      
      block header

      block flash
        - if (typeof flash !== 'undefined')
            #flash-messages.container.ro-flash-container
                if flash.success
                  #flash.alert.alert-success #{flash.success[0]}
                if flash.info
                  #flash.alert.alert-info #{flash.info[0]}
                if flash.error
                  #flash.alert.alert-danger #{flash.error[0]}

      block content
        h2 Content
        p This is the default content block from layout.jade

      block footer
        .ro-push

        block scripts
          script(type="text/javascript", src="/assets/js/vendor/jquery-1.11.0.min.js").
          script(type="text/javascript", src="/assets/js/main.js").

          script.
            $(function () {
              function pad(s) { 
                if (s.length == 1)
                  return '0' + s;
                else 
                  return s;
              }
              $('.sye-calendar').on('click', 'td', function () {
                $('.sye-calendar td').removeClass('success');
                console.log('clicked', $(this));
                $(this).toggleClass('success');
                $('#hidden_date').val('2014-03-' + pad($(this).text()));
              });
            });


